<% include includes/header.ejs %>


    <div class="container">
        <header class="jumbotron">
               <div class="container" id="jumbo">
                <h1>AutoProdaja</h1>
                 <p font-size: 300%;>Profil: <%= curruser.firstname %></p>
                </div>
        </header>
        </div>


    <div class="container">
        <header class="jumbotron1">
      <p class="pr">Vaši automobili na prodaji:</p>

        <div class="row text-center" style=" flex-wrap:wrap;
        float: left;
        width:  100%;
        height: 100%;
        object-fit: cover;
         background-color: white;
        ">
                 <% pginfo.forEach(function(item){ %>
<% if(item.owner.id== curruser.id && item.status=="prodaja" ){ %>
                     <div class="col-md-3 col-sm-6">
                       <div class="thumbnail">
                           <a href="/carssale/<%= item._id %>">
                               <img src="<%= item.image %>">
                           </a>
                               <div class="caption">
                                      <h4> <%= item.name  %> </h4>
                                 </div>
                                 <div class="caption">
                                        <h4> <%= item.status  %> </h4>
                                   </div>
                       </div>
                     </div>
                     <% } %>

                    <% }); %>
           </div>
               </header>
        </div>

        <div class="container">
            <header class="jumbotron1">
          <p class="pr">Vaši prodani automobili:</p>

            <div class="row text-center" style=" flex-wrap:wrap;
            float: left;
            width:  100%;
            height: 100%;
            object-fit: cover;
             background-color: white;
            ">
                     <% pginfo.forEach(function(item){ %>
    <% if(item.owner.id== curruser.id && item.status=="prodano" ){ %>
                         <div class="col-md-3 col-sm-6">
                           <div class="thumbnail">
                               <a href="/carssale/<%= item._id %>">
                                   <img src="<%= item.image %>">
                               </a>
                                   <div class="caption">
                                          <h4> <%= item.name  %> </h4>
                                     </div>
                                     <div class="caption">
                                            <h4> <%= item.status  %> </h4>
                                       </div>
                           </div>
                         </div>
                         <% } %>

                        <% }); %>
               </div>
                   </header>
            </div>





