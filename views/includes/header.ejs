                <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if(!curruser){ %>
                    <li><a href="/signup">SignUp <i class="fas fa-user-plus"></i></a></li>
			        <li><a href="/signin">SignIn <i class="fas fa-user"></i></a></li>

                    <% } else { %>
                   <li>
                     <% if(curruser.role=="admin"){ %>
                       <a href="/admin"> Hello, <%= curruser.firstname %> </a>
                         <% } else { %>
                            <a href="/profil"> Hello, <%= curruser.firstname %> </a>
                             <% } %>
                   </li>
                   <li><a href="/signout">SignOut <i class="fas fa-sign-out-alt"></i></a></li>
                   <% } %>
                </ul>
                </div>
            </div>
        </div>
    </nav>
     <div class="container">
         <% if(success && success.length>0) { %>
         <div class="alert alert-success" role="alert">
             <%= success %>
         </div>
     <% } %>
     <% if(error && error.length>0) { %>
         <div class="alert alert-danger" role="alert">
             <%= error %>
         </div>
          <% } %>
    </div>
