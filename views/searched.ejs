<% include includes/header.ejs %>
<div class="container">

<% if( (!curruser)  || ( curruser && curruser.role=="basic") ){ %>
        <div class="row"  style="padding-bottom: 15px;">
          <form class="col-xs-6" action="/search" method="get" >
            <% include includes/carsform.ejs %>     
          </form>
        </div>
   <% } %>

<div class="row text-center" style=" flex-wrap:wrap;
float: left;
width:  100%;
height: 100%;
padding-top: 15px;
object-fit: cover;
background-color: white;
">
         <% pginfo.forEach(function(item){ %>
           <% if(item.status=="prodaja"){ %>
             <div class="col-md-3 col-sm-6">
               <div class="thumbnail">
                   <a href="/carssale/<%= item._id %>">
                       <img src="<%= item.image %>">
                   </a>
                       <div class="caption">
                              <h4> <%= item.name  %> </h4>
                         </div>
                         <div class="caption" style="display: none;">
                                <h4> <%= item.description  %> </h4>
                         </div>
               </div>
             </div>
            <% } %>
          <% }); %>
   </div>
</div>




<% include includes/footer.ejs %>
